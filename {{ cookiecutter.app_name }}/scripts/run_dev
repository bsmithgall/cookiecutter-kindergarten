if (( $(PWD | awk -F/ '{print $NF}') == '{{ cookiecutter.app_name }}' )); then
    export TEMPLATE_DIR=$PWD"/{{ cookiecutter.app_name }}-web/app/"
    export STATIC_DIR=$PWD"/{{ cookiecutter.app_name }}-web/app/"

    cd {{ cookiecutter.app_name }}-web && grunt clean:tmp && grunt less:development && cd ../

    PYTHONPATH="./{{ cookiecutter.app_name }}-backend" python {{ cookiecutter.app_name}}-backend/{{ cookiecutter.app_name }}/app.py

else
    echo -e "You need to be in the project root to run this! \e[31mRed"
fi
